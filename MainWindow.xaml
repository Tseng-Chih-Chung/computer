        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Height="52" Margin="197,190,0,0" VerticalAlignment="Top" Width="102" FontSize="36" Click="btn4_Click"/>
        <Button x:Name="btc1" Content="1" HorizontalAlignment="Left" Height="52" Margin="197,271,0,0" VerticalAlignment="Top" Width="102" FontSize="36" Click="btc1_Click"/>
