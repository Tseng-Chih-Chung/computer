        <Button x:Name="btn_division" Content="/" HorizontalAlignment="Left" Height="35" Margin="645,271,0,0" VerticalAlignment="Top" Width="102" FontSize="25"/>
        <Button x:Name="btn_decimal_point" Content="." HorizontalAlignment="Left" Height="52" Margin="495,358,0,0" VerticalAlignment="Top" Width="102" FontSize="36"/>
        <Button x:Name="btn_equal" Content="=" HorizontalAlignment="Left" Height="83" Margin="645,327,0,0" VerticalAlignment="Top" Width="102" FontSize="25"/>

    </Grid>
</Window>
